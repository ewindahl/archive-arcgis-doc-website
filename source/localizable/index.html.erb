---
title: Documentation
layout: docindex
---

<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular-animate.js"></script>
<script src="/<%= current_language %>/docindex_controller.js" type="text/javascript"></script>

<div class="grid-container" ng-app="docindexApp" ng-controller="DocIndexListCtrl">
  <nav id='filter-list' class="column-16 pre-4 post-4 leader-2 trailer-2">
      <div class="input-group">
        <input class="input-group-input" type="text" ng-model="query" placeholder="Enter a product name or keyword to narrow the list">
        <span class="input-group-button">
          <button class="btn" ng-click="query='';">Reset</button>
        </span>
      </div>
      <div class="filter-buttons leader-half">
      <span class="font-size--2">Or, select a category:
          <button class="btn btn-small btn-clear" ng-click="query='Core products'">Core products</button>
          <button class="btn btn-small btn-clear" ng-click="query='Apps'">Apps</button>
          <button class="btn btn-small btn-clear" ng-click="query='SDK/API'">APIs / SDKs</button>
          <button class="btn btn-small btn-clear" ng-click="query='Solutions'">Solutions</button>
      </span>
      </div>
  </nav>
  <div class="column-24">
    <div id="gallerycontent" class="block-group block-group-6-up tablet-block-group-3-up phone-block-group-1-up">
      <div class="card block trailer-1" ng-repeat="item in (galleryResults = (galleryitems | filter:query | orderBy:orderProp))" style="border-style: solid; border-width: 1px; border-color: #dddddd; box-shadow:none">
          <a href="{{item.appLink}}" title="{{item.appName}}" class="link-dark-gray">
        <figure class="card-image-wrap padding-left-half leader-half">
          <img src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" class="card-image" alt="{{item.appName}}" style="height:80px;background: url('{{item.appImg}}') no-repeat"/>
        </figure>
        <div class="card-content padding-leader-0">
            <h3 class="card-last trailer-0 font-size--3">{{item.appName}}</h3>
        </div>
        </a>
      </div>
      <div ng-show="isEmpty(galleryResults)" class="empty-results">
        <h3>No results found.</h3>
      </div>
    </div>
  </div>
</div>
